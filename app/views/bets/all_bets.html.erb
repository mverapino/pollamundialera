<div class="container-fluid">
    <div class="row clearfix">
      <div class="col-md-6 column">
        <h1>Todas las Apuestas</h1>
      </div>
    </div>
    <div class="row clearfix">
      <div class="col-md-12 column">
        <h2>Respuestas</h2>
        <table class="table table-responsive">
          <thead>
          <tr>
            <th>Nombre</th>

            <% Match.all.order(:id).each do |m| %>
                <th><p><%= Team.find(m.local).name %></p>
                  <p> vs</p>
                  <p><%= Team.find(m.visit).name %>  </p> </th>
            <%end  %>
          </tr>
          </thead>
          <tbody>
          <%@users.each do|u|  %>
          <tr>

            <td><%= link_to u.name, u%></td>

            <% Match.all.order(:id).each do|m| %>
                <% b=Bet.where(match:m,user:u).first %>
                <td class="bet <%= bet_color(b) %>">
                  <%= b.nil? ? ' - ' : b.display_bet %>
                </td>
            <%end  %>

          </tr>

          <%end  %>

          </tbody>
        </table>
      </div>

    </div>

</div>