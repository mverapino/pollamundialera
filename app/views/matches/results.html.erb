<div class="container-fluid">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <h1>Resultados</h1>

      <table class="table">
        <thead>
        <tr>
          <th>Partido</th>
          <th>Resultado</th>
        </tr>
        </thead>

        <tbody>
        <% @matches.each do |m| %>
            <tr>
              <td><%= Team.find(m.local).name.to_s + ' vs ' +  Team.find(m.visit).name.to_s%></td>
              <td><%=  m.local_score.to_s + ' - ' + m.visit_score.to_s%></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>
