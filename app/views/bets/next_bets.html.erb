<div class="container-fluid">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <h1>Proximos Partidos</h1>

      <table class="table">
        <thead>
        <tr>
          <th>Nombre</th>
          <% @matches.each do |m| %>
            <th><p><%= Team.find(m.local).name %></p>
              <p> vs</p>
              <p><%= Team.find(m.visit).name %>  </p> </th>
          <%end  %>
        </tr>
        </thead>

        <tbody>
        <%@users.each do|u|  %>
          <tr>

            <td><%= link_to u[0].name, u[0]%></td>

            <% u[1].each do|b| %>

              <td >
                <%= b.display_bet %>
              </td>
            <%end  %>

          </tr>

        <%end  %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>
