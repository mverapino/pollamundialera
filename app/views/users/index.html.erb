<div class="container">
  <div class="row clearfix">
    <div class="col-sm-8 column">
      <h1>Ranking</h1>

      <table class="table table-hover table-striped table-condensed">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Puntaje</th>
        </tr>
        </thead>

        <tbody>
        <% @users.each_with_index do |user,i| %>
          <tr>
            <td><%= (i+1) %></td>
            <td><%= link_to user.name, user%></td>
            <td><%= user.total_points %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>
