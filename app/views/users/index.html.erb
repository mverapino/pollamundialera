<div class="container">
  <div class="row clearfix">
    <div class="col-sm-8 column">
      <h1>Ranking</h1>

      <table class="table table-hover table-striped table-condensed">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Puntaje</th>
        </tr>
        </thead>

        <tbody>
        <% last_index =nil %>
        <% last_tp =nil %>
        <% @users.each_with_index do |user,i| %>
          <tr>
            <% current_tp = user.total_points  %>
            <% if current_tp < 0 %>
              <td style="background-color: red;">NP</td>
            <% elsif last_index.nil? || last_tp != current_tp %>
                <td><%= (i+1) %></td>
                <% last_index = i+1  %>
            <% else %>
                <td><%= (last_index) %></td>
                <% last_index = last_index  %>
            <% end  %>
            <% last_tp = user.total_points  %>
            <td><%= link_to user.name, user%>
            <%= image_tag("corona.jpg") if user.is_champ?  %> </td>
            <td><%= last_tp %></td>
            <% last_tp = current_tp %>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>
