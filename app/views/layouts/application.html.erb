<!DOCTYPE html>
<html>
<head>
  <title>Worldcup</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
          <%= link_to 'Polla', root_path, class:'navbar-brand'  %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="<%= is_active('home')%>">
              <%= link_to 'Inicio',root_path %>
            </li>
            <li class="<%= is_active('play')%>">
              <%= link_to 'Jugar', play_path  %>
            </li>
            <li class="<%= is_active('ranking')%>">
              <%= link_to 'Ranking',ranking_path %>
            </li>
            <li class="<%= is_active('resultados')%>">
              <a href="#">Resultados</a>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="#">Acerca</a>
            </li>
            <% if user_signed_in? %>
                <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %><strong class="caret"></strong></a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Mi Perfil', edit_user_password_path %>
                </li>
                <li class="divider">
                </li>
                <li>
                  <%= link_to 'Salir', destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
            <% else %>
                <li>
                  <%= link_to 'Ingresar', new_user_session_path%>
                </li>
            <% end %>
          </ul>
        </div>

      </nav>
    </div>
  </div>
  <%= yield %>
</div>


</body>
</html>
